               <gmd:statement {% if not layer.raw_data_quality_statement %}gco:nilReason="missing"/>{% else %}>
                  <gco:CharacterString>{{layer.raw_data_quality_statement}}</gco:CharacterString>
               </gmd:statement>
               {% endif %}
            </gmd:LI_Lineage>
         </gmd:lineage>
      </gmd:DQ_DataQuality>
  </gmd:dataQualityInfo>
</gmd:MD_Metadata>
